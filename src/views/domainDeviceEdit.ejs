<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs'); %>
</head>

<body>
    <%- include('partials/header.ejs');  %>
    <h2><%= domainName[0].name%></h2>
    <form method="post">
        <%for(el of boards){%>
            <label>
                <input 
                    type="checkbox" 
                    name="devices[]" 
                    value='{"id":"<%=el.id%>", "name": "<%=el.name%>"}'
                    <%if (domainDevices.filter(elem=>(elem.board_id == el.id)).length>0){%>
                        checked
                    <%}%>
                >
                <%=el.name%>
            </label>
            <br>
        <%}%>
        <button type="submit">Save</button>
    </form>
</body>

</html>